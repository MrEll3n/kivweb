{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
	"include": [
		"env.d.ts", 
		"src/**/*", 
		"src/stores/*.ts",
		"srs/types/*.ts",
		"src/**/*.vue", 
		"typings.d.ts"
	],
	"exclude": [
		"src/**/__tests__/*"
	],
	"compilerOptions": {
		"composite": true,
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

		"baseUrl": ".",
		"paths": {
			"@/*": [
				"src/*"
			]
		}
	}
}
